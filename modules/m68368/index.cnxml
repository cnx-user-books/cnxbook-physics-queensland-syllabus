                              <m:mn>–1</m:mn>
                              <m:mtext>.60 </m:mtext>
                              <m:mi>×</m:mi>
                              <m:msup>
                                <m:mtext> 10</m:mtext>
                                
                                  <m:mrow>
                                    <m:mrow>
                                      <m:mo stretchy="false">−</m:mo>
                                      <m:mtext>19</m:mtext>
                                    </m:mrow>
                                  </m:mrow>
                                
                              </m:msup><m:mspace width="0.25em"/>
                              <m:mtext> C</m:mtext>
                            </m:mrow>
                          </m:mfrac>
                        </m:mrow>
                      </m:mrow>
                  </m:mrow></m:mtd>
                </m:mtr>
                <m:mtr><m:mtd/>
<m:mtd>   <m:mo stretchy="false">=</m:mo></m:mtd>
<m:mtd>
                  <m:mrow>
                    <m:mtext>1.88 </m:mtext>
                    <m:mi>×</m:mi>
                    <m:msup>
                      <m:mtext> 10</m:mtext>
                      
                        <m:mrow>
                          <m:mtext>15</m:mtext>
                        </m:mrow>
                      
                    </m:msup><m:mspace width="0.25em"/>
                    <m:mfrac>
                     <m:mrow>
                      <m:msup>
                       <m:mi>e</m:mi>
                       <m:mtext>–</m:mtext>
                      </m:msup>
                     </m:mrow>
