                    <m:mrow>
                      <m:mtext>K</m:mtext>
                    </m:mrow>
                  </m:msub>
                  <m:mo stretchy="false">=</m:mo>
                  <m:mtext>25</m:mtext>
                </m:mrow>
                <m:mtext>º</m:mtext>
                <m:mrow>
